[global]
pid = /run/php-fpm/php-fpm.pid
error_log = /var/log/php-fpm/error.log
daemonize = no

[wordpress]
listen = /var/run/php-fpm/php-fpm-wordpress.sock

user = vagrant
group = vagrant

pm = dynamic
pm.max_children = 128
pm.start_servers = 2
pm.min_spare_servers = 2
pm.max_spare_servers = 4

catch_workers_output = yes
 
php_admin_value[open_basedir] = {{ project_directory }}/{{ project_name }}

php_value[post_max_size] = 2048M
php_value[upload_max_filesize] = 1024M

php_value[session.save_handler] = files
php_value[session.save_path] = {{ project_directory }}/{{ project_name }}/tmp
