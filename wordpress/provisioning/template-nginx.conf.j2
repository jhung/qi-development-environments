user  nginx;
worker_processes  2;
error_log  /var/log/nginx/error.log warn;
pid        /var/run/nginx.pid;

events {
    worker_connections  1024;
}

http {
    include       /etc/nginx/mime.types;
    default_type  application/octet-stream;

    log_format  main  '$remote_addr - $remote_user [$time_local] "$request" '
                      '$status $body_bytes_sent "$http_referer" '
                      '"$http_user_agent" "$http_x_forwarded_for"';

    access_log  /var/log/nginx/access.log  main;
    error_log   /var/log/nginx/error.log   warn;

    sendfile        on;
    tcp_nopush      on;
    tcp_nodelay     on;

    keepalive_timeout  30;

    gzip  on;
    gzip_types text/plain text/css application/json application/x-javascript text/xml application/xml application/xml+rss text/javascript application/javascript font/opentype font/ttf application/font-woff application/vnd.ms-fontobject image/svg+xml;

    client_body_buffer_size 256k;

    fastcgi_temp_file_write_size 32m;
    fastcgi_busy_buffers_size 32k;
    fastcgi_buffer_size 32k;
    fastcgi_buffers 32 32k;
    fastcgi_connect_timeout 60;
    fastcgi_send_timeout 60;
    fastcgi_read_timeout 60;
    fastcgi_intercept_errors on;

    server_tokens off;


    server {
      listen                       80;
      server_name                  _;
      root                         {{ project_directory }}/{{ project_name }};
    
      client_max_body_size         2048M;
    
      location / {
        index                      index.php index.htm index.html;
        try_files                  $uri $uri/ /index.php?$args;
    
        location ~* /(?:uploads|files|wp-content)/.*\.php$ {
          deny                     all;
        }
    
        location ~* \.(js|css|png|jpg|jpeg|bmp|gif|ico|ttf|otf|woff)$ {
          expires                  max;
          log_not_found            on;
        }
    
        location ~ \.php$ {
          try_files                $uri =404;
          fastcgi_split_path_info  ^(.+\.php)(/.+)$;
          include                  fastcgi_params;
          fastcgi_param            SCRIPT_FILENAME $document_root$fastcgi_script_name;
          fastcgi_pass             unix:/var/run/php-fpm/php-fpm-wordpress.sock;
        }
      }
    
      location ~ /\.(git|htaccess) {
        deny                     all;
      }
    }


}
